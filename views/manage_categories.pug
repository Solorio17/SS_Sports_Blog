extends layout

block content
  .container
    .row
      .col-md-9
        h1 #{title}
      .col-md-3
        a(class="btn btn-warning create-btn", href="/manage/categories/add") Add Category
      table(class="table table-striped")
        tr
          th Category title
          th
        each category, i in categories
          tr
            td #{category.title}
            td
              a(class="btn btn-tiny btn-info" href='/manage/categories/edit/'+category._id) Edit
